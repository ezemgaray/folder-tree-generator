{
	"compilerOptions": {
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"lib": ["ESNext"],
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": ".",
		"removeComments": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": ["src"]
}
