{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": ["ESNext"],
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"removeComments": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
	},
	"include": ["src"]
}
